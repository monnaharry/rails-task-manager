<h1><%= @task.title %></h1>
<p> <%= @task.details %> </p>
<% if @task.completed %>
   <p><i class="far fa-check-square"></i> <%= "Task Complete!" %></p>
<% else %>
  <p><i class="far fa-square"></i> <%= "This task has not been completed" %></p>
<% end %>
<%= link_to "Back to list", tasks_path %>

<%= link_to "Edit this task", edit_task_path(@task) %>
